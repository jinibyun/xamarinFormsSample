<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="WorkingWithPopups.AlertPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Padding="0,20,0,0">
            <Label
                FontSize="Large"
                HorizontalOptions="Center"
                Text="DisplayAlert" />
            <Button Clicked="OnAlertSimpleClicked" Text="Alert Simple" />
            <Button Clicked="OnAlertYesNoClicked" Text="Alert Yes/No" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
