<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TextSample.BuiltInStylesXaml"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Built in Styles Demo - XAML">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="10">
            <Label Style="{DynamicResource TitleStyle}" Text="Title Style" />
            <Label Style="{DynamicResource SubtitleStyle}" Text="Subtitle Style" />
            <Label Style="{DynamicResource BodyStyle}" Text="Body Style" />
            <Label Style="{DynamicResource CaptionStyle}" Text="Caption Style" />
            <Label Style="{DynamicResource ListItemTextStyle}" Text="ListItemText Style" />
            <Label Style="{DynamicResource ListItemDetailTextStyle}" Text="ListItemDetailText Style" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
